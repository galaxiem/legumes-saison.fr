extends default.jade
block contentBlock
	block legumeBlock
	article
		.gros-rond
			img(src="#{computeImage(legume,true)}", onload="scale(event);")
		include navMois
		h1 #{legume.nom}
		h2 En cuisine
		p
			!= legume.cuisine
		h2 Les bienfaits
		p
			!= legume.bienfaits

		.fb-share-button(data-href="https://www.facebook.com/legumesalabonnesaison", data-layout="button_count")
