mixin social-mixin(legume)
	h2 J'aime #{legume.nom} !
	.fb-like(data-href="#{computeLink(legume, true)}", data-layout="button_count", data-share="true")
	a(href="https://twitter.com/share",class="twitter-share-button",data-url="#{computeLink(legume, true)}",data-text="J'aime #{legume.nom}!",data-lang="fr",data-hashtags="FruitsLegumesSaison") Tweeter
	script !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');