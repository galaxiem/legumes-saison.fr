extends default
block contentBlock
	block moisBlock	
	article
		h1 #{nomMois}
		ul.liste-legume
			each val, index in legumesMois
				li.section.group
					.rond.col.span_2_of_12
						img(src="#{computeImage(val,false)}")
					.texte.col.span_8_of_12
						h2 <a href="#{computeLink(val)}">#{val.nom}</a>
						.col.span_5_of_12.cuisine <strong>En cuisine: </strong> #{val.cuisine.substring(0,170)}...
						.col.span_5_of_12.bienfaits <strong>Les bienfaits: </strong> #{val.bienfaits.substring(0,170)}...